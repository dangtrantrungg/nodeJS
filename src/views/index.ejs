<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>noteJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="/js/functions.js">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <h2>List Users</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
        </tr>
        <tbody>

            <% for(var i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td>
                        <%= dataUser[i].id%>
                    </td>
                    <td>
                        <%= dataUser[i].firstName%>
                    </td>
                    <td>
                        <%= dataUser[i].lastName%>
                    </td>
                    <td>
                        <button onclick=" window.open('/detail/user/<%= dataUser[i].id%>','_blank')">Detail</button>
                        <button onclick=" window.open('/edit/user/<%= dataUser[i].id%>','_blank')">Edit</button>
                        <button>Delete</button>
                    </td>
                </tr>
                <% } %>

        </tbody>
    </table>

</body>

</html>