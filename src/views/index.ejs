<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>noteJS Basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="/js/functions.js">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="/upload">Upload</a>

    </div>
    <h2>List Users</h2>
    <table>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
        </tr>
        <tbody>
            <% for(var i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td>
                        <%= dataUser[i].id%>
                    </td>
                    <td>
                        <%= dataUser[i].firstName%>
                    </td>
                    <td>
                        <%= dataUser[i].lastName%>
                    </td>
                    <td>
                        <form action="/detail/user/<%= dataUser[i].id%>" method="GET">
                            <button type="submit">Detail</button>
                        </form>

                        <form action="/edit/user/<%= dataUser[i].id%>" method="GET">
                            <button type="submit">Edit</button>
                        </form>
                        <form action="/delete/user" method="POST">
                            <input type="text" hidden value="<%= dataUser[i].id%>" name="userID" />
                            <button type="submit">Delete</button>
                        </form>

                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
    <form action='/add/user' method="POST">
        <div class="create-new-user-content">
            <div><b>Create new user</b></div>
            <div>
                <label>First name</label>
                <input type="text" name="firstName">
            </div>
            <div>
                <label>Last name</label>
                <input type="text" name="lastName">
            </div>
            <div>
                <label>Email</label>
                <input type="email" name="email">
            </div>
            <div>
                <label>Address</label>
                <input type="text" name="address">
            </div>
            <div>
                <button type="submit" class="btn-submit" value="Submit"
                    onclick="window.open('/add/user')">Submit</button>
            </div>
        </div>
    </form>

</body>

</html>